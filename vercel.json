{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "MONGO_URI": "MONGO_URI",
    "JWT_SECRET": "JWT_SECRET",
    "FRONTEND_URL": "FRONTEND_URL",
    "EMAIL_USER": "EMAIL_USER",
    "EMAIL_PASS": "EMAIL_PASS"
  }
}
